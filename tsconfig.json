{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es2017",
            "dom",
            "es5",
            "scripthost"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "declaration": true,
        // "suppressImplicitAnyIndexErrors": true
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "out",
    ]
}