{
    "name": "lawtext",
    "version": "0.0.33",
    "description": "Lawtext language server and preview",
    "displayName": "Lawtext",
    "author": "yamachi",
    "publisher": "yamachi",
    "homepage": "https://github.com/yamachig/vscode-lawtext/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/yamachig/vscode-lawtext.git"
    },
    "license": "MIT",
    "main": "./client/out/bundle.js",
    "browser": "./client/out-browser/bundle.js",
    "scripts": {
        "vscode:prepublish": "npm run build:prod",
        "build:dev": "npx webpack --color --config ./webpack-configs/index.ts",
        "build:prod": "npx webpack --color --mode production --devtool hidden-source-map --config ./webpack-configs/index.ts",
        "watch": "npx webpack --color --watch --config ./webpack-configs/index.ts",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "browser": "npx vscode-test-web --extensionDevelopmentPath=. ."
    },
    "dependencies": {
        "lawtext": "^0.1.33"
    },
    "devDependencies": {
        "@types/node": "^20.6.2",
        "@types/react": "^18.2.21",
        "@types/react-dom": "^18.2.7",
        "@types/vscode-webview": "^1.57.2",
        "@types/webpack": "^5.28.2",
        "@typescript-eslint/eslint-plugin": "^6.7.0",
        "@typescript-eslint/parser": "^6.7.0",
        "@vscode/test-web": "^0.0.45",
        "buffer": "^6.0.3",
        "eslint": "^8.49.0",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-tsdoc": "^0.2.17",
        "path-browserify": "^1.0.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "ts-loader": "^9.4.4",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2",
        "vscode": "^0.9.9",
        "webpack": "^5.88.2",
        "webpack-cli": "^5.1.4"
    },
    "engines": {
        "vscode": "^1.63.0"
    },
    "activationEvents": [
        "onCommand:extension.showLawtextPreview",
        "onLanguage:lawtext"
    ],
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "lawtext",
                "aliases": [
                    "Lawtext",
                    "lawtext",
                    "law.txt"
                ],
                "extensions": [
                    ".law.txt",
                    ".lawtext"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "keybindings": [
            {
                "command": "lawtext.showLawtextPreview",
                "key": "shift+ctrl+l",
                "mac": "shift+cmd+l",
                "when": "editorTextFocus"
            }
        ],
        "commands": [
            {
                "command": "lawtext.showLawtextPreview",
                "title": "Show Lawtext Preview",
                "icon": "$(preview)",
                "category": "Lawtext"
            },
            {
                "command": "lawtext.openFromElaws",
                "title": "Open law file from e-LAWS",
                "icon": "$(globe)",
                "category": "Lawtext"
            },
            {
                "command": "lawtext.openURI",
                "title": "Open Lawtext URI",
                "category": "Lawtext"
            },
            {
                "command": "lawtext.toXML",
                "title": "Convert to XML",
                "icon": "$(file-code)",
                "category": "Lawtext"
            },
            {
                "command": "lawtext.toDocx",
                "title": "Convert to Word (.docx)",
                "icon": "$(book)",
                "category": "Lawtext"
            },
            {
                "command": "lawtext.xmlToLawtext",
                "title": "Convert Law XML to Lawtext",
                "icon": "$(go-to-file)",
                "category": "Lawtext"
            },
            {
                "command": "lawtext.xmlToDocx",
                "title": "Convert Law XML to Word (.docx)",
                "icon": "$(book)",
                "category": "Lawtext"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "lawtext.openFromElaws",
                    "group": "navigation@1",
                    "when": "(resourceLangId == lawtext) || resourceLangId == xml"
                },
                {
                    "command": "lawtext.showLawtextPreview",
                    "group": "navigation@2",
                    "when": "resourceLangId == lawtext"
                },
                {
                    "command": "lawtext.toXML",
                    "group": "navigation@3",
                    "when": "resourceLangId == lawtext"
                },
                {
                    "command": "lawtext.toDocx",
                    "group": "navigation@4",
                    "when": "resourceLangId == lawtext"
                },
                {
                    "command": "lawtext.xmlToLawtext",
                    "group": "navigation@2",
                    "when": "resourceLangId == xml"
                },
                {
                    "command": "lawtext.xmlToDocx",
                    "group": "navigation@3",
                    "when": "resourceLangId == xml"
                }
            ]
        },
        "configurationDefaults": {
            "[lawtext]": {
                "editor.tabSize": 2,
                "editor.detectIndentation": false,
                "editor.insertSpaces": true,
                "editor.wrappingIndent": "indent",
                "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?「」（）　、。・―",
                "editor.unicodeHighlight.allowedCharacters": {
                    "　": true,
                    "０": true,
                    "１": true,
                    "２": true,
                    "３": true,
                    "４": true,
                    "５": true,
                    "６": true,
                    "７": true,
                    "８": true,
                    "９": true,
                    "．": true
                },
                "editor.unicodeHighlight.allowedLocales": {
                    "ja": true
                },
                "editor.bracketPairColorization.enabled": true,
                "editor.definitionLinkOpensInPeek": true,
                "editor.wordWrap": "on"
            },
            "editor.semanticTokenColorCustomizations": {
                "rules": {
                    "*.defaultLibrary.declaration.definition": {
                        "bold": true
                    }
                },
                "[Default Light+]": {
                    "rules": {
                        "variable": {
                            "foreground": "#0944c5"
                        }
                    }
                }
            }
        }
    }
}
