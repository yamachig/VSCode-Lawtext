{
    "name": "lawtext",
    "version": "0.0.6",
    "description": "Lawtext syntax highlight and preview",
    "displayName": "Lawtext",
    "author": "yamachi",
    "publisher": "yamachi",
    "homepage": "https://github.com/yamachig/vscode-lawtext/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/yamachig/vscode-lawtext.git"
    },
    "license": "MIT",
    "main": "./client/out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "npx tsc -b",
        "watch": "npx tsc -b -watch",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
    },
    "dependencies": {
        "lawtext": "^0.1.0"
    },
    "devDependencies": {
        "@types/node": "^17.0.23",
        "@typescript-eslint/eslint-plugin": "^5.18.0",
        "@typescript-eslint/parser": "^5.18.0",
        "eslint": "^8.12.0",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-tsdoc": "^0.2.14",
        "typescript": "^4.6.3",
        "vscode": "^1.1.10"
    },
    "engines": {
        "vscode": "^1.63.0"
    },
    "activationEvents": [
        "onCommand:extension.showLawtextPreview",
        "onLanguage:lawtext"
    ],
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "lawtext",
                "aliases": [
                    "Lawtext",
                    "lawtext",
                    "law.txt"
                ],
                "extensions": [
                    ".law.txt",
                    ".lawtext"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "lawtext",
                "scopeName": "text.lawtext",
                "path": "./syntaxes/lawtext.tmLanguage.json"
            }
        ],
        "keybindings": [
            {
                "command": "extension.showLawtextPreview",
                "key": "shift+ctrl+l",
                "mac": "shift+cmd+l",
                "when": "editorTextFocus"
            }
        ],
        "commands": [
            {
                "command": "extension.showLawtextPreview",
                "title": "Show Lawtext Preview",
                "category": "Lawtext"
            }
        ],
        "configurationDefaults": {
            "[lawtext]": {
                "editor.tabSize": 2,
                "editor.insertSpaces": true,
                "editor.wrappingIndent": "indent",
                "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?「」（）　、。・―"
            }
        },
        "menus": {
            "editor/title": [
                {
                    "command": "extension.showLawtextPreview",
                    "when": "resourceLangId == lawtext"
                }
            ]
        }
    }
}
