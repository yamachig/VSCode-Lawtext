{
    "name": "lawtext",
    "version": "0.0.7",
    "description": "Lawtext language server and preview",
    "displayName": "Lawtext",
    "author": "yamachi",
    "publisher": "yamachi",
    "homepage": "https://github.com/yamachig/vscode-lawtext/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/yamachig/vscode-lawtext.git"
    },
    "license": "MIT",
    "main": "./client/out/bundle.js",
    "browser": "./client/out-browser/bundle.js",
    "scripts": {
        "vscode:prepublish": "npm run build:prod && npm run build-browser:prod",
        "build:dev": "npx webpack --color --config ./webpack-configs/main.ts",
        "build:prod": "npx webpack --color --mode production --devtool hidden-source-map --config ./webpack-configs/main.ts",
        "build-browser:dev": "npx webpack --color --config ./webpack-configs/browser.ts",
        "build-browser:prod": "npx webpack --color --mode production --devtool hidden-source-map --config ./webpack-configs/browser.ts",
        "watch": "npx webpack --color --watch --config ./webpack-configs/main.ts",
        "watch-browser": "npx webpack --color --watch --config ./webpack-configs/browser.ts",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "browser": "npx vscode-test-web --extensionDevelopmentPath=. ."
    },
    "dependencies": {
        "lawtext": "^0.1.2"
    },
    "devDependencies": {
        "@types/node": "^17.0.23",
        "@types/webpack": "^5.28.0",
        "@typescript-eslint/eslint-plugin": "^5.18.0",
        "@typescript-eslint/parser": "^5.18.0",
        "@vscode/test-web": "^0.0.24",
        "eslint": "^8.12.0",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-tsdoc": "^0.2.14",
        "path-browserify": "^1.0.1",
        "ts-loader": "^9.2.8",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.3",
        "vscode": "^0.9.9",
        "webpack": "^5.72.0",
        "webpack-cli": "^4.9.2"
    },
    "engines": {
        "vscode": "^1.63.0"
    },
    "activationEvents": [
        "onCommand:extension.showLawtextPreview",
        "onLanguage:lawtext"
    ],
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "lawtext",
                "aliases": [
                    "Lawtext",
                    "lawtext",
                    "law.txt"
                ],
                "extensions": [
                    ".law.txt",
                    ".lawtext"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "keybindings": [
            {
                "command": "extension.showLawtextPreview",
                "key": "shift+ctrl+l",
                "mac": "shift+cmd+l",
                "when": "editorTextFocus"
            }
        ],
        "commands": [
            {
                "command": "extension.showLawtextPreview",
                "title": "Show Lawtext Preview",
                "category": "Lawtext"
            }
        ],
        "configurationDefaults": {
            "[lawtext]": {
                "editor.tabSize": 2,
                "editor.insertSpaces": true,
                "editor.wrappingIndent": "indent",
                "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?「」（）　、。・―",
                "editor.unicodeHighlight.allowedCharacters": {
                    "　": true,
                    "０": true,
                    "１": true,
                    "２": true,
                    "３": true,
                    "４": true,
                    "５": true,
                    "６": true,
                    "７": true,
                    "８": true,
                    "９": true,
                    "．": true
                },
                "editor.unicodeHighlight.allowedLocales": {
                    "ja": true
                }
            },
            "editor.semanticTokenColorCustomizations": {
                "rules": {
                    "*.defaultLibrary.declaration.definition": {"bold": true}
                }
            }
        },
        "menus": {
            "editor/title": [
                {
                    "command": "extension.showLawtextPreview",
                    "when": "resourceLangId == lawtext"
                }
            ]
        }
    }
}
